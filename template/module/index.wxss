.module-popup {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 45%;
  width: 640rpx;
  height: 680rpx;
  z-index: 700;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}
.module-popup view,
.module-popup scroll-view {
  box-sizing: border-box;
}
.module-popup .module-title {
  position: relative;
  height: 95rpx;
  line-height: 95rpx;
  background: #2d2c34;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  font-weight: 600;
}
.module-popup .module-title .module-close {
  position: absolute;
  top: 0;
  right: 0;
  height: 95rpx;
  line-height: 95rpx;
  width: 95rpx;
}
.module-popup .module-title .module-close::after {
  content: 'X';
  display: block;
  position: absolute;
  height: 95rpx;
  line-height: 95rpx;
  width: 95rpx;
  top: 0;
  right: 0;
  color: #FFF;
  font-size: 36rpx;
  text-align: center;
  font-family: Arial, SimSun, sans-serif;
}
.module-popup .module-content {
  position: absolute;
  overflow: hidden;
  margin: auto;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  top: 95rpx;
  bottom: 95rpx;
  margin: 24rpx 0rpx 24rpx 0rpx;
}
.module-popup .module-content scroll-view {
  padding: 0rpx 24rpx 0rpx 24rpx;
}
.module-popup .module-content scroll-view .module-radio-list {
  text-align: center;
  padding-top: 20rpx;
  font-size: 28rpx;
}
.module-popup .module-content scroll-view .module-radio-list .module-left {
  width: 20%;
  height: 52rpx;
  line-height: 60rpx;
  font-weight: bold;
}
.module-popup .module-content scroll-view .module-radio-list .module-right {
  width: 80%;
  text-align: left;
}
.module-popup .module-content scroll-view .module-radio-list .module-right button {
  width: 130rpx;
  height: 56rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  display: inline-block;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.module-popup .module-content scroll-view .module-radio-list .module-right button.active {
  background: #f74b7b;
}
.module-popup .module-content scroll-view .module-radio-list .module-right.module-right-item button {
  width: 208rpx;
}
.module-popup .module-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
}
.module-popup .module-footer > button {
  margin: 0rpx 80rpx 20rpx 80rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  background: #f74b7b;
  color: #fff;
}
