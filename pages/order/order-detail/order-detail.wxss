page { background: #f1f3f4; }

.ct .head { background: #fff; min-height: 6rem; }
.ct .head .title { display: inline-block; width: 100%; box-sizing: border-box; padding: 1rem 1.75rem; }
.ct .head .title .left { display: inline-block; float: left; box-sizing: border-box; }
.ct .head .title .left image { float: left; }
.ct .head .title .left text { float: left; }
.ct .head .title .right { float: right; box-sizing: border-box; }
.ct .head .title .right text { margin-top: 0.3rem; }

.ct .block {  }
.ct .price-area { background: #fff; }
.ct .price-area .title { border: 1px solid #ddd; }
.ct .price-area .title text {  }
.ct .price-area .pro-list { padding: 0 1rem; box-sizing: border-box; }
.ct .price-area .pro-list .list { padding: 0; }
.ct .price-area .pro-list .list .entry { box-sizing: border-box; display: inline-block; width: 100%; margin-bottom: 0.5rem; }
.ct .price-area .pro-list .list .entry:first-child { margin-top: 0.3rem; }
.ct .price-area .pro-list .list .entry text {  }
.ct .price-area .pro-list .list .entry .left { text-align: left; width: 55%; }
.ct .price-area .pro-list .list .entry .middle { text-align: center; width: 15%; }
.ct .price-area .pro-list .list .entry .right { text-align: right; width: 30%; }
.ct .price-area .pro-list .list .entry view { float: left; min-height: 0.3rem; }

.ct .info {  background: #fff; }
.ct .info .title {  }
.ct .info .inner { box-sizing: border-box; padding-left:1rem;}
.ct .info .inner .entry { display: inline-block; width: 100%; }
.ct .info .inner .entry:last-child { padding-bottom: 0.8rem; }
.ct .info .inner .entry .left { width: 20%; float: left; text-align: left; }
.ct .info .inner .entry .right { width: 76%; float: right; }
