<form class="wrapper has-nav" bindsubmit="queSubmit">
  <view class="info bg-color-white">
    <image src="/images/icon/bangding.png"></image>
    <view class="phone-add">
      <image src="/images/icon/huiyuan.png"></image>
    </view>
    <view class="ct arrow-list-ctn">
      <form class="list form" bindsubmit="formSubmit" style="margin-top:-2rem;">
        <view class="entry">
          <image src="/images/icon/user.png" class=""></image>
          <input name="mobile" placeholder-style="color: #aab1cb;" type="number" maxlength="11" placeholder="请输入手机号码" />
        </view>
        <view class="mes" wx:if="{{phone}}">*您的手机号码格式输入有误，请重新输入</view>
        <view class="entry relative inblk pd-right-none">
          <image src="/images/icon/mima.png" class=""></image>
          <input class="fl" name="code" placeholder-style="color: #aab1cb;" placeholder="请输入手机验证码" />

          <!--发送验证码开始倒计时-->
          <view class="btn-ctn fr" wx:if="{{clock==''}}">
            <button class="btn btn-default h3" formType="submit">获取验证码</button>
          </view>
          <view class="btn-ctn btn-me fr" wx:if="{{clock!=''}}">
            <button class="btn btn-default h3 btn-me">{{clock}}(s)</button>
          </view>
        </view>
        <view class="mes" wx:if="{{yanzhengma}}">*手机验证码输入错误，请重新输入</view>
      </form>
    </view>
  </view>
  <view class="btn-ctn width-all mg-top-bigger">
    <button class="btn inblk btn-red button" formType="submit">确定</button>
  </view>
  <view class="clear"></view>
</form>

