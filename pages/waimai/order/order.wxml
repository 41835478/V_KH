<view class="wrapper has-nav">
    <view class="ct bg-color-gray overflow-h">
        <view class="ct arrow-list-ctn">
            <view class="cus-ctn">
                <block wx:if="{{DefaultAddress}}">
                    <navigator open-type="redirect" url="/pages/vkahui/address-edit/address-edit?isWaimai=true">
                        <view class="entry inblk relative active width-all mg-top-none cus-height">
                            <view class="cus-table">
                                <view class="cus-table-cell text-left">
                                    <view class="inblk add">
                                        <image src="/images/icon/add.png"></image>
                                    </view>
                                    <text class="gray-1 inblk me">新建收货地址</text>
                                </view>
                            </view>
                        </view>
                    </navigator>
                </block>
                <block wx:else>
                    <navigator open-type="redirect" url="/pages/vkahui/address/address?isWaimai=true">
                        <view class="entry inblk relative active" style="padding-top:0.7rem;padding-bottom:0.3rem;">
                            <view class="left fl">
                                <image class="inline-icon icon-normal" src="/images/icon/address-address.png"></image>
                            </view>
                            <view class="right fl">
                                <view class="inline-div">
                                    <text>{{loadDefault.name}}</text>
                                    <text>{{loadDefault.mobile}}</text>
                                </view>
                                <view class="inline-div mg-top-small">
                                    <text class="inline-text gray-1">{{loadDefault.address}}</text>
                                </view>
                            </view>
                            <view class="arrow">
                                <view class="outer">
                                    <view class="inner">
                                        <image src="/images/icon/arrow-right.png"></image>
                                    </view>
                                </view>
                            </view>
                        </view>
                    </navigator>
                </block>
            </view>
        </view>
        <view class="pro-list border-t">
            <view class="header bg-color-white">
                <text class="h4">商品列表</text>
            </view>
            <view class="cur-page bg-color-white">
                <block wx:for="{{consumerData}}" wx:key="*this">
                    <view class="list">
                        <view class="entry">
                            <view class="inner">
                                <text class="p">{{item.name}}</text>
                                <view class="mark">
                                    <block wx:if="{{item.method.length > 0}}">
                                        <view class="mark">
                                            <block wx:for="{{item.method}}" wx:key="*this" wx:for-item="mItem">
                                                <text class="btn btn-red-default red">{{mItem.name}}</text>
                                            </block>
                                        </view>
                                    </block>
                                </view>
                            </view>
                        </view>
                        <view class="entry">
                            <text class="p text-right">×{{item.foodCount}}</text>
                        </view>
                        <view class="entry">
                            <text class="p red text-right">¥ {{item.singleProductTotal}}</text>
                        </view>
                    </view>
                </block>
            </view>
            <view class="cur-page bg-color-white">
                <view class="list" style="padding-bottom:0">
                    <view class="entry">
                        <view class="inner">
                            <text class="p">餐盒费</text>
                        </view>
                    </view>
                    <view class="entry">
                        <text class="p text-right">×1</text>
                    </view>
                    <view class="entry">
                        <text class="p red text-right">¥ {{canhe}}</text>
                    </view>
                </view>
                <view class="list" style="padding-bottom:0" wx:if="{{peisong!=0}}">
                    <view class="entry">
                        <view class="inner">
                            <text class="p">配送费</text>
                        </view>
                    </view>
                    <view class="entry">
                        <text class="p text-right">×1</text>
                    </view>
                    <view class="entry">
                        <text class="p red text-right">¥ {{peisong}}</text>
                    </view>
                </view>
                <view class="list" style="padding-bottom:0.3rem;">
                    <view class="entry">
                        <view class="inner">
                            <text class="p">优惠折扣</text>
                        </view>
                    </view>
                    <view class="entry" style="float:right;">
                        <text class="p red text-right">{{discount}}折</text>
                    </view>
                </view>
            </view>
            <view class="remark bg-color-white">
                <text class="p cus-width-4">备注</text>
                <input name="remark" bindchange="bindChange" placeholder-style="color: #bbc1d4;font-size:0.8rem;"
                       placeholder="请填写..."/>
            </view>
        </view>
    </view>
    <view class="count" style="bottom:0;background:#ffffff;height:3rem;">
        <view class="entry text-left width-40" style="line-height:110rpx;font-size:30rpx;">
            <text style="bottom:0;color:#000000;">总金额：</text>
            <text class="red bold">¥{{ zongjine }}</text>
        </view>
        <view class="entry text-left width-30">
            <text class="p" style="bottom:-0.1rem;color:#000000;font-size:0.7rem;">(已优惠:¥{{youhui}})</text>
        </view>
        <view class="entry text-right width-30">
            <button bindtap="submitOrder" class="btn btn-red width-all" style="line-height:3rem">去支付</button>
        </view>
    </view>

    <!--<import src="/pages/template/template.wxml" />
      <template is="navigation" />-->
</view>